<!-- dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #222; /* Arka plan rengi, örneğin koyu gri */
      color: #fff; /* Yazı rengi, örneğin beyaz */
      font-family: Arial, sans-serif;
    }

    .container {
      text-align: center;
      padding: 20px;
      border: 2px solid #fff; /* Çerçeve rengi, örneğin beyaz */
      border-radius: 10px;
      background-color: #333; /* Form arka plan rengi, örneğin koyu gri */
      margin-bottom: 20px;
    }

    form {
      margin-bottom: 20px;
    }

    textarea {
      width: 100%;
      height: 100px;
    }

    #post-list {
      width: 100%;
      max-width: 600px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .post {
      border: 1px solid #fff; /* Post çerçeve rengi, örneğin beyaz */
      border-radius: 5px;
      margin-bottom: 10px;
      padding: 10px;
      transition: background-color 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .post:hover {
      background-color: #555; /* Hover rengi, örneğin daha koyu gri */
    }

    .post-header {
      display: flex;
      justify-content: space-between;
      width: 100%;
      margin-bottom: 10px;
    }

    h2 {
      margin: 0;
    }

    .user-name {
      color: #4CAF50; /* Kullanıcı adı rengi, örneğin yeşil */
    }

    .timestamp {
      color: #888; /* Zaman damgası rengi, örneğin gri */
    }
  </style>
</head>

<body>

  <div class="container">
    <h1>Post Paylaş</h1>
    <form action="/post/createPost" method="POST">
      <label for="description">post:</label>
      <textarea id="description" name="description" required></textarea>
      <input type="submit" value="İlan Ver">
    </form>
  </div>

  <ul id="post-list">
    <% if (posts.length > 0) { %>
    <% posts.reverse().forEach(post => { %> <!-- reverse() kullanarak postları ters sırala -->
    <li class="post">
      <div class="post-header">
        <span class="user-name"><%= user.username %></span>
      </div>
      <h2><%= post.description %></h2>
    </li>
    <% }); %>
    <% } else { %>
    <p>No posts available.</p>
    <% } %>
  </ul>

  <script>
    
  </script>

</body>

</html>
